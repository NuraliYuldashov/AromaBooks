@model List<Book>

<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="fw-bold py-3 mb-4">Categories Table</h4>
        <a asp-area="admin"
           asp-controller="book"
           asp-action="add"
           class="btn btn-success" style="height: 40px; color: white;"> + Add new </a>
    </div>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table " >
                <thead>
                    <tr>
                        <th>Id </th>
                        <th>Title</th>
                        <th>Author </th>
                        <th>Price</th>
                        <th>Publish Year</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i>  <strong>@item.Id</strong> </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Author
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                @item.PublishedYear
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a asp-area="admin"
                                       asp-controller="book"
                                       asp-action="view"
                                       asp-route-id="@item.Id"
                                       class="btn btn-info"><i class='bx bxs-spreadsheet'></i>View</a>
                                    <a asp-area="admin"
                                       asp-controller="book"
                                       asp-action="edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-primary ms-3"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a asp-area="admin"
                                       asp-controller="book"
                                       asp-action="delete"
                                       asp-route-id="@item.Id"
                                       onclick="return confirm('Are you sure delete this item?');"
                                       class="btn btn-danger ms-3"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>
<!-- / Content -->