@model Book


<div class="card m-4 p-5">
	<!--================Single Product Area =================-->
	<div class="">
		<div class="container">
			<div class="row ">
				<div class="col-lg-6">
					
						<div class="">
						@{
							string imageSource = !string.IsNullOrEmpty(Model.ImageUrl) ? $"~/uploads/{@Model.ImageUrl}" : "~/uploads/default.jpg";
						}
						<img class="img-fluid" src="@imageSource" asp-append-version="true" alt="">
						</div>
					
				</div>
				<div class="col-lg-6 ">
					<div class="">
						<div class="row">
							<div class="col-md-6"><h3>Title :</h3></div>
							<div class="col-md-6" style="font-weight: normal; color : #9c9c9c"><h3>@Model.Title</h3></div>
						</div>

						<div class="row">
							<div class="col-md-6"><h3>Author :</h3></div>
							<div class="col-md-6" style="font-weight: normal; color : #9c9c9c"><h3>@Model.Author</h3></div>
						</div>

						<div class="row">
							<div class="col-md-6"><h3>Price :</h3></div>
							<div class="col-md-6" style="font-weight: normal; color : #9c9c9c"><h3>@Model.Price</h3></div>
						</div>

						<div class="row">
							<div class="col-md-6"><h3>PublishedYear :</h3></div>
							<div class="col-md-6" style="font-weight: normal; color : #9c9c9c"><h3>@Model.PublishedYear</h3></div>
						</div>

						<div class="row">
							<div class="col-md-6"><h3>PageCount :</h3></div>
							<div class="col-md-6" style="font-weight: normal; color : #9c9c9c"><h3>@Model.PageCount</h3></div>
						</div>

						<div class="row">
							<div class="col-md-6"><h3>Category :</h3></div>
							<div class="col-md-6" style="font-weight: normal; color : #9c9c9c"><h3>@Model.Category.Name</h3></div>
						</div>
						<div class="row">
							<div class="col-md-6"><h3>Description :</h3></div>
							<div class="col-md-6" style="font-weight: normal; color : #9c9c9c"><h3>@Model.Description</h3></div>
						</div>

						<div class="d-flex justify-content-center mt-4">
							<a asp-area="admin"
							   asp-controller="book"
							   asp-action="index"
							   class="btn btn-secondary"><i class='bx bx-arrow-back'></i>Back</a>
							<a asp-area="admin"
							   asp-controller="book"
							   asp-action="edit"
							   asp-route-id="@Model.Id"
							   class="btn btn-primary ms-3"><i class="bx bx-edit-alt me-1"></i> Edit</a>
							<a asp-area="admin"
							   asp-controller="book"
							   asp-action="delete"
							   asp-route-id="@Model.Id"
							   onclick="return confirm('Are you sure delete this item?');"
							   class="btn btn-danger ms-3"><i class="bx bx-trash me-1"></i> Delete</a>
						</div>


						<div class=" d-flex align-items-center">
							<a class="icon_btn" href="#"><i class="lnr lnr lnr-diamond"></i></a>
							<a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--================End Single Product Area =================-->

</div>