@model Category

<div class="container" style="width: 600px">
    <div class="card my-4">
        <h5 class="card-header">New Category</h5>
        <div class="card-body">
            <div>
                <form asp-area="admin"
                      asp-controller="category"
                      asp-action="add"
                      method="post">
                    <label for="name" class="form-label">Name</label>
                    <input asp-for="Name"
                           type="text"
                           class="form-control"
                           id="name" />
                    <span asp-validation-for="Name" id="defaultFormControlHelp" class="text-danger form-text">
                    </span>

                    <div class="d-flex justify-content-center mt-4">
                        <a asp-area="admin"
                           asp-controller="category"
                           asp-action="index"
                           class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-success ms-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>